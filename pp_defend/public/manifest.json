{
  "name": "Pixel Patrol",
  "version": "0.1.5",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pixel Patrol"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",
    "sandbox": "sandbox allow-scripts; script-src * 'wasm-unsafe-eval'; object-src 'self'; worker-src * blob:; child-src * blob:"
  },
  "permissions": [
    "system.display",
    "tts",
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage",
    "downloads",
    "contextMenus",
    "offscreen",
    "pageCapture",
    "windows",
    "webRequest",
    "processes",
    "runtime",
    "notifications",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "onnx_worker.js",
        "offscreen.html",
        "offscreen.js",
        "notification.js",
        "notification.html",
        "utils.js",
        "models/*",
        "libs/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "sandbox": {
    "pages": ["sandbox.html"]
  }
}
